<div class="d-flex justify-content-between align-items-center">
  <h3 class="m-0"><%= pageTitle %></h3>
  <a class="btn btn-primary" href="/userGames/create" role="button">
    <i class="bi-plus-lg"></i> Create User
  </a>
</div>

<div class="table-responsive mt-3">
  <table class="table table-bordered table-hover">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Username</th>
        <th scope="col">Email</th>
        <th scope="col">Password</th>
      </tr>
    </thead>
    <tbody>
      <% userGames.forEach((userGame, index) => { %>
        <tr>
          <th scope="row"><%= index + 1 %></th>
          <td class="w-100"><%= userGame.username %></td>
          <td><%= userGame.email %></td>
          <td><%= userGame.password %></td>
          <td>
            <div class="d-flex gap-2 text-nowrap">
              <a class="btn btn-success btn-sm" href="/userGames/<%= userGame.id %>" role="button">
                <i class="bi-eye-fill"></i> Detail
              </a>
              <a class="btn btn-primary btn-sm" href="/userGames/<%= userGame.id %>/edit" role="button">
                <i class="bi-pencil-fill"></i> Edit
              </a>
              
              <form method="post" action="/userGames/<%= userGame.id %>?_method=DELETE">
                <button class="btn btn-danger btn-sm" type="submit">
                  <i class="bi-trash-fill"></i> Delete
                </button>
              </form>
            </div>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>