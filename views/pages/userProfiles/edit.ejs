<h3 class="mb-3">Edit Profile</h3>

<form method="post" action="/userGames/<%= userProfile.id %>?_method=PUT">
  <div class="mb-3">
    <label for="fullName" class="form-label">Full Name</label>
    <input type="text" class="form-control" name="fullName" value="<%= userProfile.fullName %>" id="fullName" required>
  </div>

  <div class="mb-3">    
    <label for="address" class="form-label">Address</label>
    <input type="text" class="form-control" id="address" value="<%= userProfile.address %>" name="address" required>
  </div>

  <div class="mb-3">
    <label for="phoneNumber" class="form-label">Phone Number</label>
    <input type="text" class="form-control" id="phoneNumber" name="password" value="<%= userProfile.phoneNumber %>" required>
  </div>

  <div class="mb-4">
    <label for="userGame" class="form-label">User Game</label>
    <select class="form-select" aria-label="UserGame" name="userGameId" required>
        <% userGames.forEach((userGame) => { %>
        <option value="<%= userGame.id %>" <%= userProfile.userGameId === userGame.id ? "selected" : '' %>>
          <%= userGame.username %>
        </option>
      <% }) %>
    </select>
    </div>

  <div class="row">
    <div class="col-auto">
      <button type="button" onclick="history.back()" class="btn btn-danger">Cancel</button>
    </div>

    <div class="col-auto">
      <button type="reset" class="btn btn-secondary">Reset</button>
    </div>

    <div class="col-auto">
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
  </div>
</form>
  </div>
  </div>
</form>